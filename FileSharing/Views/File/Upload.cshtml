@model FileSharing.ViewModels.FileUploadModel

@{
    ViewData["Title"] = "Upload";
}

<form asp-action="Upload" asp-controller="File" method="post" enctype="multipart/form-data" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"/>
    <div class="form-group">
        <label asp-for="UploadFile">Выберите файл:</label>
        <input type="file" asp-for="UploadFile"/>
        <span asp-validation-for="UploadFile"/>
    </div>
    <div class="form-group">
        <label asp-for="Password">Пароль доступа:</label>
        <input type="password" asp-for="Password" placeholder="(необязательно)"/>
        <span asp-validation-for="Password"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Загрузить" class="btn"/>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}