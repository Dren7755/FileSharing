@{
    ViewData["Title"] = "Скачать файл";
}
@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
{
    <div class="danger">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}

<form asp-action="Get" asp-controller="File" method="post" asp-antiforgery="true">
    <input type="hidden" name="fileId" value="@ViewBag.fileId" />
    <div class="form-group">
        <label for="accessPassword">
            Пароль доступа: <input type="password" name="accessPassword" />
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="Скачать" class="btn" />
    </div>
</form>