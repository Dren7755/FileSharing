@model FileSharing.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Registration";
}

<form asp-action="Registration" asp-controller="User" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email:</label>
        <input type="text" asp-for="Email" />
        <span asp-validation-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Login" class="control-label">Логин:</label>
        <input type="text" asp-for="Login" />
        <span asp-validation-for="Login" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль:</label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label">Повторите пароль:</label>
        <input type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" />
    </div>
    <div class="form-group">
        <input type="submit" value="Регистрация" class="btn" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
